<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:elevation="@dimen/elev_toolbar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:title="@string/app_name"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtStrDetTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="65dp"
                    android:fitsSystemWindows="true"
                    android:text="Store Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_xl"
                    app:layout_collapseMode="parallax" />

                <TextView
                    android:id="@+id/txtStrDetCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="100dp"
                    android:fitsSystemWindows="true"
                    android:text="Category"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_l"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:id="@+id/imgStrDetRate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="25dp"
                    android:src="@mipmap/ic_rate35_w48" />

                <TextView
                    android:id="@+id/txtStrDetRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="110dp"
                    android:fitsSystemWindows="true"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_l"
                    app:layout_collapseMode="parallax" />
            </FrameLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 밑에 내용-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:id="@+id/itemStrDetCall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:foreground="?android:selectableItemBackground"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:src="@mipmap/ic_phone_c192"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="전화"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/itemStrDetShare"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:foreground="?android:selectableItemBackground"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@mipmap/ic_share_c192" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="공유하기" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/itemStrDetRand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:foreground="?android:selectableItemBackground"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@mipmap/ic_dice_c192" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="랜덤" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/itemStrDetEditPropose"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:foreground="?android:selectableItemBackground"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@mipmap/ic_send_c192" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="수정제안" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"/>

            <LinearLayout
                android:id="@+id/itemLivTime"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:foreground="?android:selectableItemBackground">
                <View
                    android:layout_width="20dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/imgLivTime"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_clock_c192"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/txtLivTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00년 00월 ~ 00년 00월"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/textsize_m" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"/>

            <LinearLayout
                android:id="@+id/itemLivPrice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:foreground="?android:selectableItemBackground">
                <View
                    android:layout_width="20dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/imgLivPrice"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_price_c96"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/txtLivPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1년 500만원"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/textsize_m" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"/>
            <LinearLayout
                android:id="@+id/itemLivBill"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:foreground="?android:selectableItemBackground">
                <View
                    android:layout_width="20dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/imgLivBill"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_bill_c96"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/txtLivBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="월 5만원"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/textsize_m" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"/>
            <LinearLayout
                android:id="@+id/itemLivBuiltin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:foreground="?android:selectableItemBackground">
                <View
                    android:layout_width="20dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/imgLivBuiltin"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_builtin_c96"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/txtStoreItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="부대시설"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/textsize_m" />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_folded_c192"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="20dp"/>

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"/>
            <LinearLayout
                android:id="@+id/itemLivReview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:foreground="?android:selectableItemBackground"
                android:paddingTop="20dp">
                <View
                    android:layout_width="20dp"
                    android:layout_height="50dp"/>
                <ImageView
                    android:id="@+id/imgLivReview"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:src="@mipmap/ic_review_c96"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="리뷰"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/textsize_m" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="20dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem"
                    android:textColor="@color/dark"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="55dp"
        android:layout_width="55dp"
        app:layout_anchor="@id/app_bar_layout"
        android:layout_marginRight="20dp"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@mipmap/ic_bookmark_w192"/>

</android.support.design.widget.CoordinatorLayout>